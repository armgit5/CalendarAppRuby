<style>
  tbody td {
    font-size: 10pt;
    text-align: center;
  }
  tr {
    color: black;
  }
  .header {
    background-color: #BBBBBB;
  }
  
  .navbar-form {
    padding: 0px;
  }
  
</style>

<div class="container">
  <!-- Main component for a primary marketing message or call to action -->
  <!--/ flash massages -->
  
  <%= form_tag '/register', :method => 'get', :id => "sales_search", :class => "navbar-form navbar-right" do %>
    <p>
      <div class="form-group">
        <%= text_field_tag :search, params[:search], :placeholder => "SEARCH SALES NAME" %>
      </div>
    </p>
  <% end %>
  
  <div class="notice"><%= flash[:notice] %></div> 
  <div id="schedule-table"><%= render 'partial' %></div>
</div> 
<div><%= render 'hover' %></div>

