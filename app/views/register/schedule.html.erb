<h1>Welcome to Nilpeter Scheduling form</h1>
<p>Please fill up your schedule information here</p>

<%= link_to "Index", :action => 'index' %>

<%= form_tag(:action => 'create') do %>
  <label>
    <div>Project</div>
    <%= text_field(:schedule, :project) %>
  </label>
  <label>
    <div>Date</div>
    <div class="calendar"><%= text_field(:schedule, :date) %></div>
  </label>
  <label>
    <div>Customer</div>
    <%= text_field(:schedule, :customer) %>
  </label>
  <div class="error"><%= @error %></div>
  
  <%= submit_tag('Create Schedule') %>
  
  
<% end %>
  
