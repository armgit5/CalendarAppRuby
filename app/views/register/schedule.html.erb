<h1>Welcome to Nilpeter Scheduling form</h1>
<p>Please fill up your schedule information here</p>

<form method="post">
  <label>
    <div>Project</div>
    <input type="text" name="project" value="<%= @project %>">
  </label>
  <label>
    <div>Date</div>
    <input type="text" name="date" value="<%= @date %>">
  </label>
  <label>
    <div>Customer</div>
    <textarea name="content"><%= @customer %></textarea>
  </label>
  <div class="error"><%= @error %></div>
  
  <input type="submit">
</form>

