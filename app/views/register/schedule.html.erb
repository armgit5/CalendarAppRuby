<h1>Welcome to Nilpeter Scheduling form</h1>
<p>Please fill up your schedule information here</p>

<%= stylesheet_link_tag "css/jquery.simple-dtpicker" %>
<%= javascript_include_tag "js/jquery.simple-dtpicker" %>


<%= link_to "Index", :action => 'index' %>
<%= form_tag(:action => 'create') do %>
  
  <label>
    <div>Date & Time</div>
    <%= text_field(:schedule, :date, :class => "datetimepicker") %>
  </label>
  <label>
    <div>Customer Name</div>
    <%= text_field(:schedule, :customer) %>
  </label>
  <label>
    <div>Customer Location</div>
    <%= text_field(:schedule, :location) %>
  </label>
  <label>
    <div>Sales Name</div>
    <%= text_field(:schedule, :sales) %>
  </label>
  <label>
    <div>Project Description</div>
    <%= text_area(:schedule, :project) %>
  </label>
  <div class="error"><%= @error %></div>
  
  <%= submit_tag('Create Schedule') %>

  
<% end %>
 
