<h1>Edit Page</h1>
<p>Please fill up your schedule information here</p>

<%= link_to "Index", :action => 'index' %>

<%= form_tag(:action => 'update', :id => @schedule.id) do %>
  <label>
    <div>Project</div>
    <%= text_field(:schedule, :project) %>
  </label>
  <label>
    <div>Date</div>
    <div class="calendar"><%= date_select(:schedule, :date, :order => [:day, :month, :year]) %></div>
  </label>
  <label>
    <div>Customer</div>
    <%= text_field(:schedule, :customer) %>
  </label>
  <div class="error"><%= @error %></div>
  
  <%= submit_tag('Update Schedule') %>
  
  
<% end %>
  
