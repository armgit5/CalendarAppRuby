<style type="text/css">

#rotating-header {
  width: 960px;
  height: 305px;
  display: block;
  overflow: hidden;
}

.rotating-header-item
{
  width: 960px;
  height: 305px;
  display: none;
  margin: 0 auto;
  position: absolute;
  z-index: 1000;
}

.caption
{
  width: 365px;
  height: 225px;
  display: block;
  float: right;
  background: url(/media/nilpeter-rotating-header-caption.png);
  margin: 30px 30px 0 0;
  padding: 10px;
}

.caption p.title 
{
    font-family: "Neo Sans W01", Arial, sans-serif;
    font-size: 37px;
    text-transform: uppercase;
    color: #ffffff !important;
    line-height: 1em;
    margin: 0 0 15px 0;
    padding: 0 0 10px 0;
    font-weight: normal;
    border-bottom: 2px dashed #fff;
}

.caption p.desc 
{
    font-family: "Neo Sans W01", Arial, sans-serif;
    font-size: 18px;
    color: #ffffff !important;
    line-height: 1.5em;
    margin-top: 0px;
    font-weight: normal;
}

a.header-link {
  width: 960px;
  height: 305px;
  display: block;
  text-indent: -999em;
  position: relative;
  margin: 0;
}

#slide-next {
  float: right;
  width: 30px;
  height: 60px;
  background: url(/media/nilpeter-arrow-right.png) no-repeat;
  background-size: cover;
  cursor: pointer;
  position: relative;
  z-index: 1100;
  margin: -183px 0 0 0;
}

#slide-prev {
  float: left;
  width: 30px;
  height: 60px;
  background: url(/media/nilpeter-arrow-left.png) no-repeat;
  background-size: cover;
  cursor: pointer;
  position: relative;
  z-index: 1100;
  margin: -183px 0 0 0;
}

@media screen and (max-width: 480px) {
  #rotating-header {
    max-width: 420px;
    width: 100%;
    height: 155px;
    display: block;
    overflow: hidden;
  }
  
  .rotating-header-item
  {
    max-width: 480px;
    width: 100%;
    height: 155px;
    display: none;
    margin: 0 auto;
    position: absolute;
    z-index: 1000;
  }

  .caption {
    width: 460px;
    height: 150px;
    display: none;
    float: none;
    background-image: none;
    background-color: #DC0514;
    margin: 155px 0 0 0;
    padding: 10px;
  }

  .caption p.title {
    font-size: 18px !important;
    margin: 0 0 5px 0;
    padding: 0 0 5px 0;
  }

  .caption p.desc {
    font-size: 14px !important;
  }

  a.header-link {
    max-width: 480px;
    width: 100%;
    height: 155px;
    _margin: -155px 0 0 0;
  }

  #slide-next {
    margin: -105px 0 0 0;
  }

  #slide-prev {
    margin: -105px 0 0 0;
  }
}
</style>
