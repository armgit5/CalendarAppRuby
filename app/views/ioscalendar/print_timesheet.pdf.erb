        $('#mechanicalNo').attr('checked','<%= @timesheet_json["mechanicalNo"] %>' === "true");
        $('#electricalYes').attr('checked','<%= @timesheet_json["electricalYes"] %>' === "true");
        $('#electricalNo').attr('checked','<%= @timesheet_json["electricalNo"] %>' === "true");
